import mysql.connector

mydb = mysql.connector.connect(
    host="localhost",
    user="root",
    password="",
    database="dbhrm"
)

mycursor = mydb.cursor()


def insert_user():
    EID = input("Enter the User ID: ")
    ENAME = input("Enter the name: ")


    sql = "INSERT INTO tblemployees (EID, ENAME) VALUES (%s, %s)"
    val = (EID, ENAME)

    mycursor.execute(sql, val)
    mydb.commit()

    print(mycursor.rowcount, "record inserted.")


def delete_user():
    EID = input("Enter the User ID: ")
    sql = "DELETE FROM tblemployees WHERE EID = %s"
    val = (EID,)

    mycursor.execute(sql, val)
    mydb.commit()

    print(mycursor.rowcount, "record(s) deleted")


def update_user():
    EID = input("Enter the User ID: ")
    ENAME = input("Enter the User NAME: ")

    sql = "UPDATE tblemployees SET ENAME = %s WHERE EID = %s"
    val = (ENAME, EID )

    mycursor.execute(sql, val)
    mydb.commit()

    print(mycursor.rowcount, "record(s) affected")


def search_user():
    EID = input("Enter the User ID: ")
    sql = "SELECT * FROM tblemployees WHERE EID = %s"
    val = (EID,)

    mycursor.execute(sql, val)
    myresult = mycursor.fetchall()

    for x in myresult:
        print(x)


def main():
    while True:
        print("User Management Menu")
        print("1. Search User")
        print("2. Add User")
        print("3. Update User")
        print("4. Delete User")
        print("5. Exit")

        choice = input("Enter your choice [1/2/3/4/5]: ")

        if choice == '1':
            search_user()
        if choice == '2':
            insert_user()
        if choice == '3':
            update_user()
        if choice == '4':
            delete_user()
        if choice == '5':
            exit()

    print("Thank you for using User Management System")


if __name__ == "__main__":
    main()
